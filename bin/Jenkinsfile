pipeline {
    agent { agent any }	

    tools {
        maven "maven_3.6.3"
    }

    environment {	
        DOCKERHUB_CREDENTIALS = credentials('dockerloginid')
    } 
    
    stages {
        stage('SCM Checkout') {
            steps {
                git 'https://github.com/madhav-2025/banking--projects.git'
            }
        }
        
        stage('Maven Build') {
            steps {
                sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        
        stage("Docker Build") {
            steps {
                sh 'docker version'
                sh "docker build -t jhamadhav2025/banking-app:${BUILD_NUMBER} ."
                sh 'docker image list'
            }
        }
        
        stage('Login to DockerHub') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        
        stage('Push to DockerHub') {
            steps {
                sh "docker push jhamadhav2025/banking-app:${BUILD_NUMBER}"
                sh "docker push jhamadhav2025/banking-app:latest"
            }
        }
        
        stage('Deploy to Kubernetes Dev Environment') {
            steps {
                script {
                    sshPublisher(publishers: [sshPublisherDesc(
                        configName: 'Kubernetes', 
                        transfers: [sshTransfer(
                            cleanRemote: false, 
                            excludes: '', 
                            execCommand: 'kubectl apply -f kubernetesdeploy.yaml', 
                            execTimeout: 120000, 
                            flatten: false, 
                            makeEmptyDirs: false, 
                            noDefaultExcludes: false, 
                            patternSeparator: '[, ]+', 
                            remoteDirectory: '.', 
                            remoteDirectorySDF: false, 
                            removePrefix: '', 
                            sourceFiles: '*.yaml'
                        )], 
                        usePromotionTimestamp: false, 
                        useWorkspaceInPromotion: false, 
                        verbose: false
                    )])
                }
            }
        }
    }
    
    //  EMAIL NOTIFICATIONS ADDED HERE
    post {
        always {
            emailext (
                subject: "Jenkins Build: ${currentBuild.fullDisplayName}",
                body: """
                Project: ${env.JOB_NAME}
                Build Number: ${env.BUILD_NUMBER}
                Build Status: ${currentBuild.currentResult}
                Build URL: ${env.BUILD_URL}
                """,
                to: "jhamadhav2025@gmail.com", //  Your email added
                attachLog: true
            )
        }
    }
}
